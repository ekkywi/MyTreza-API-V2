generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BudgetMonthly {
  id        String   @id @default(uuid())
  userId    String
  month     Int
  year      Int
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, month, year])
}

model BudgetCategory {
  id         String   @id @default(uuid())
  userId     String
  categoryId String
  month      Int
  year       Int
  amount     Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId, month, year])
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  avatarUrl String?
  currency  String   @default("IDR")
  isEarlyAdopter Boolean @default(true) // Early adopter privilege flag
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Wallet       Wallet[]
  Transaction  Transaction[]
  Category     Category[]    @relation("UserCategories")
  Transfer     Transfer[]    @relation("UserTransfers")
  RefreshToken RefreshToken?

  BudgetMonthly  BudgetMonthly[]
  BudgetCategory BudgetCategory[]
  Goal                 Goal[]
  RecurringTransaction RecurringTransaction[]
  Debt                 Debt[]
  Notification         Notification[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String
  name      String
  type      String
  color     String?
  icon      String?
  balance   Float    @default(0)
  isArchived Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  Transaction  Transaction[]
  TransferFrom         Transfer[]             @relation("fromWallet")
  TransferTo           Transfer[]             @relation("toWallet")
  RecurringTransaction RecurringTransaction[]
}

model Category {
  id        String   @id @default(uuid())
  userId    String? // null = global
  name      String
  type      String
  icon      String?
  createdAt DateTime @default(now())

  // RELATION BACK TO USER
  user User? @relation("UserCategories", fields: [userId], references: [id])

  // RELATION BACK TO TRANSACTIONS
  Transaction Transaction[]

  BudgetCategory       BudgetCategory[]
  RecurringTransaction RecurringTransaction[]
}

model Transaction {
  id            String   @id @default(uuid())
  userId        String
  walletId      String
  categoryId    String?
  type          String
  amount        Float
  description   String?
  attachmentUrl String?
  date          DateTime
  createdAt     DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  wallet Wallet @relation(fields: [walletId], references: [id])

  // RELATION FIXED: add name "TransactionCategory"
  category Category? @relation(fields: [categoryId], references: [id])

 // Pastikan field ini ada dan tambahkan onDelete: Cascade
  transferId    String?
  transfer      Transfer? @relation(fields: [transferId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, type])
  @@index([userId, walletId])
}

model Transfer {
  id           String   @id @default(uuid())
  userId       String
  fromWalletId String
  toWalletId   String
  amount       Float
  adminFee     Float    @default(0)
  description  String?
  date         DateTime @default(now())
  createdAt    DateTime @default(now())

  // RELATION FIXED: add name "UserTransfers"
  user User @relation("UserTransfers", fields: [userId], references: [id])

  // Relasi balik (otomatis ditambahkan Prisma biasanya)
  transactions  Transaction[]

  fromWallet Wallet @relation("fromWallet", fields: [fromWalletId], references: [id])
  toWallet   Wallet @relation("toWallet", fields: [toWalletId], references: [id])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Goal {
  id            String    @id @default(uuid())
  userId        String
  name          String
  targetAmount  Float
  currentAmount Float     @default(0)
  deadline      DateTime?
  icon          String?   // e.g. "car", "home"
  color         String?   // e.g. "#FF0000"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model RecurringTransaction {
  id            String   @id @default(uuid())
  userId        String
  walletId      String
  categoryId    String?
  type          String   // INCOME, EXPENSE
  amount        Float
  description   String?
  frequency     String   // DAILY, WEEKLY, MONTHLY, YEARLY
  startDate     DateTime
  nextRun       DateTime // The next date this should run
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  wallet   Wallet   @relation(fields: [walletId], references: [id])
  category Category? @relation(fields: [categoryId], references: [id])

  @@index([isActive, nextRun])
}

model Debt {
  id            String   @id @default(uuid())
  userId        String
  type          String   // "PAYABLE" (Hutang), "RECEIVABLE" (Piutang)
  personName    String
  amount        Float    // Total awal
  remaining     Float    // Sisa yang belum lunas
  dueDate       DateTime?
  description   String?
  isPaid        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, isPaid, type])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String   // INFO, WARNING, DANGER, SUCCESS
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
  @@index([userId, createdAt])
}
